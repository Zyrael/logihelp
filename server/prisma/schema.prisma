generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:dev.db"
}

model Supplier {
  id          Int       @id @default(autoincrement())
  name        String
  phoneNumber String?
  addresses   Address[]
  contacts    Contact[]
}

model Address {
  id         Int      @id @default(autoincrement())
  name       String?
  address    String
  supplier   Supplier @relation(fields: [supplierId], references: [id])
  supplierId Int
}

model Contact {
  id          Int      @id @default(autoincrement())
  name        String
  phoneNumber String
  supplier    Supplier @relation(fields: [supplierId], references: [id])
  supplierId  Int
}
